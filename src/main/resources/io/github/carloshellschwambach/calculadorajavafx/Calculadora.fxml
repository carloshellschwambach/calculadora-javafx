<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.carloshellschwambach.calculadorajavafx.CalculadoraController"
          alignment="center" hgap="10" vgap="10" styleClass="calculator-grid">

  <TextField fx:id="display" editable="false" styleClass="display" GridPane.columnSpan="4" />

  <Button text="7" onAction="#handleButtonPress" GridPane.rowIndex="1" GridPane.columnIndex="0" />
  <Button text="8" onAction="#handleButtonPress" GridPane.rowIndex="1" GridPane.columnIndex="1" />
  <Button text="9" onAction="#handleButtonPress" GridPane.rowIndex="1" GridPane.columnIndex="2" />
  <Button text="/" onAction="#handleButtonPress" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="operator-btn"/>

  <Button text="4" onAction="#handleButtonPress" GridPane.rowIndex="2" GridPane.columnIndex="0" />
  <Button text="5" onAction="#handleButtonPress" GridPane.rowIndex="2" GridPane.columnIndex="1" />
  <Button text="6" onAction="#handleButtonPress" GridPane.rowIndex="2" GridPane.columnIndex="2" />
  <Button text="*" onAction="#handleButtonPress" GridPane.rowIndex="2" GridPane.columnIndex="3" styleClass="operator-btn"/>

  <Button text="1" onAction="#handleButtonPress" GridPane.rowIndex="3" GridPane.columnIndex="0" />
  <Button text="2" onAction="#handleButtonPress" GridPane.rowIndex="3" GridPane.columnIndex="1" />
  <Button text="3" onAction="#handleButtonPress" GridPane.rowIndex="3" GridPane.columnIndex="2" />
  <Button text="-" onAction="#handleButtonPress" GridPane.rowIndex="3" GridPane.columnIndex="3" styleClass="operator-btn"/>

  <Button text="0" onAction="#handleButtonPress" GridPane.rowIndex="4" GridPane.columnIndex="0" />
  <Button text="C" onAction="#handleButtonPress" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="clear-btn"/>
  <Button text="=" onAction="#handleButtonPress" GridPane.rowIndex="4" GridPane.columnIndex="2" styleClass="equal-btn"/>
  <Button text="+" onAction="#handleButtonPress" GridPane.rowIndex="4" GridPane.columnIndex="3" styleClass="operator-btn"/>

  <columnConstraints>
    <ColumnConstraints percentWidth="25"/>
    <ColumnConstraints percentWidth="25"/>
    <ColumnConstraints percentWidth="25"/>
    <ColumnConstraints percentWidth="25"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="20"/>
    <RowConstraints percentHeight="20"/>
    <RowConstraints percentHeight="20"/>
    <RowConstraints percentHeight="20"/>
    <RowConstraints percentHeight="20"/>
  </rowConstraints>
</GridPane>
